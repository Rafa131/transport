SELECT * FROM LOGIN;
SELECT * FROM ADMIN;
SELECT * FROM OFFICER;
SELECT * FROM APPROVAL;
SELECT * FROM HELPLINE;
SELECT * FROM DRIVER;
SELECT * FROM HELPER;
SELECT * FROM TRANSPORT;
SELECT * FROM T_TYPE;


---QUERY

---1.TO LIST OUT THE PASSENGER CARRIER
	SELECT T_NAME AS PASSENGER_CARRIER FROM T_TYPE WHERE SHIPMENT LIKE '%passenger%';
---2.TO UPDATE A LOCATION,ROUTE,COST FOR A TRANSPORT
	UPDATE T_TYPE
  	SET ROUTE = 'n->f->a->b', LOCATION = 'n', COST_$ = 10
  	WHERE T_NAME = 'bus';
	SELECT * FROM T_TYPE WHERE T_NAME='bus';
---3.TO SUM UP THE AVAILABLE NO. OF TRANSPORT
	SELECT COUNT(*) FROM TRANSPORT;
	SELECT COUNT(T_NAME) AS PASSENGER_CARRIER FROM T_TYPE WHERE SHIPMENT LIKE'%passenger%';
---4.TO JOIN AADMIN_ID WITH LOGIN_ID
	SELECT * FROM ADMIN a JOIN login l ON a.USER_ID = l.USER_ID;
 
 







