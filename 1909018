CREATE TABLE DRIVER(
DRIVER_ID VARCHAR(20),
LICENSE_NO NUMBER(30),
LICENSE_EXPIRED_DATE VARCHAR(20),
NID NUMBER(30),
NAME VARCHAR(10),
ADDRESS VARCHAR(20),
CONTACT_NO VARCHAR(35),
PRIMARY KEY(DRIVER_ID,LICENSE_NO)
);
