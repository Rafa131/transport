CREATE TABLE ADMIN(
EMAIL VARCHAR(50),
    ADMIN_ID VARCHAR(20),
    NAME VARCHAR(20),
    USER_ID VARCHAR(20),
    PASSWORD VARCHAR(10),
    PRIMARY KEY(ADMIN_ID),
    FOREIGN KEY (USER_ID) REFERENCES LOGIN(USER_ID)
);
