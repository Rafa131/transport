CREATE TABLE T_TYPE(
T_NAME VARCHAR(20),
SHIPMENT VARCHAR(30),
LOCATION VARCHAR(20),
ROUTE VARCHAR(30),
COST_$ NUMBER(30),
FOREIGN KEY(T_NAME) REFERENCES TRANSPORT(T_NAME)
);
INSERT INTO T_TYPE VALUES('bus','passenger','a','a->b->d->z',5);
INSERT INTO T_TYPE VALUES('truck','any kinds of goods','s','s->b->v->d',5);
INSERT INTO T_TYPE VALUES('rickshaw','passenger','c','c->w->a->n->m',10);
INSERT INTO T_TYPE VALUES('motorbike','passenger,accessories','z','z->s->q->b',15);
INSERT INTO T_TYPE VALUES('taxi','passenger','l','l->q->s->m->o',12);
INSERT INTO T_TYPE VALUES('plane','passenger,assets','d','d->a->p->q',20000);
