DROP TABLE LOGIN;
DROP TABLE ADMIN;
DROP TABLE OFFICER;
DROP TABLE APPROVAL;
DROP TABLE HELPLINE;
DROP TABLE DRIVER;
DROP TABLE HELPER;
DROP TABLE TRANSPORT;
DROP TABLE T_TYPE;

CREATE TABLE LOGIN(
EMAIL VARCHAR(50),
USER_ID VARCHAR(20),
LOGIN_ID VARCHAR(20),
USER_NAME VARCHAR(20),
PASSWORD VARCHAR(10),
PRIMARY KEY (LOGIN_ID);
UNIQUE(USER_ID)
);
